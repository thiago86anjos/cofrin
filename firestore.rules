rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sugestões inteligentes por hábito (por usuário)
    // Collection: user_suggestions/{userId}/patterns/{normalizedDescription}
    match /user_suggestions/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
